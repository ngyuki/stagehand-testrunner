{
    "name": "piece/stagehand-testrunner",
    "type": "library",
    "description": "A continuous test runner for CLI",
    "keywords": ["testing", "cli"],
    "homepage": "http://piece-framework.com/projects/stagehand-testrunner",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "KUBO Atsuhiro",
            "email": "kubo@iteman.jp"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3.2",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-SPL": "*",
        "piece/stagehand-alterationmonitor": ">=2.0.0",
        "piece/stagehand-componentfactory": ">=1.0.0",
        "symfony/class-loader": ">=2.0.0",
        "symfony/config": ">=2.0.0",
        "symfony/console": ">=2.0.0",
        "symfony/dependency-injection": ">=2.0.0",
        "symfony/finder": ">=2.0.0",
        "symfony/process": ">=2.0.0",
        "symfony/yaml": ">=2.0.0"
    },
    "suggest": {
        "phpunit/phpunit": ">=3.6.0"
    },
    "autoload": {
        "psr-0": { "Stagehand\\TestRunner": "src/" }
    },
    "bin": ["composer/testrunner"],
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
